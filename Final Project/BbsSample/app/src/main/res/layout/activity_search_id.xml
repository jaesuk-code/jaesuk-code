<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SearchId">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarIdSearch"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:titleTextColor="@color/meta_grey01"
            app:titleTextAppearance="@style/TitleBarTextAppearance"
            android:background="@color/meta_white"/>

    <TextView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:padding="11dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:fontFamily="@font/font_content_regular"
            android:textSize="14sp"
            android:text="개인정보 인증"
            android:background="@drawable/id_search_background"
            />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:fontFamily="@font/font_content_regular"
            android:textSize="16sp"
            android:text="회원가입 시 등록한 정보로\n아이디를 확인할 수 있습니다."
            />

    <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="이름을 입력해주세요"
            android:paddingStart="12dp"
            android:paddingTop="17.5dp"
            android:paddingBottom="17.5dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:background="@drawable/login_input_box"/>

    <EditText
            android:id="@+id/editBirth"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:ems="10"
            android:paddingStart="12dp"
            android:paddingTop="17.5dp"
            android:paddingBottom="17.5dp"
            android:inputType="date"
            android:layout_gravity="center"
            android:background="@drawable/login_input_box"
            android:textSize="14sp"
            android:hint="생년월일 [8자리]를 입력해주세요"
            app:layout_constraintTop_toBottomOf="@+id/editName"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:visibility="gone"
            android:gravity="center"/>

    <Button
            android:id="@+id/searchIdBtn"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="35dp"
            android:paddingBottom="10dp"
            android:background="@drawable/btn_shadow"
            android:text="확인"
            android:fontFamily="@font/font_content_bold"
            android:textSize="14sp"/>

</LinearLayout>