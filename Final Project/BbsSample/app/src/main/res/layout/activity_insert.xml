<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".InsertActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarInsertMember"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:titleTextColor="@color/meta_grey01"
            app:titleTextAppearance="@style/TitleBarTextAppearance"
            android:background="@color/meta_white"/>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/metamom_splash_logo"
                    android:layout_gravity="center"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/idInputBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="16dp"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="@color/meta_grey05"
                    app:hintTextColor="@color/meta_grey03"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/idInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="아이디"
                        android:inputType="text"
                        android:fontFamily="@font/font_content_regular"
                        android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pwdInputBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="16dp"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="@color/meta_grey05"
                    app:hintTextColor="@color/meta_grey03"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/pwdInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="비밀번호"
                        android:inputType="textPassword"
                        android:fontFamily="@font/font_content_regular"
                        android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pwdInputBoxCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="16dp"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="@color/meta_grey05"
                    app:hintTextColor="@color/meta_grey03"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/pwdInputCheck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="비밀번호 확인"
                        android:fontFamily="@font/font_content_regular"
                        android:inputType="textPassword"
                        android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nameInputBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="16dp"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="@color/meta_grey05"
                    app:hintTextColor="@color/meta_grey03"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/nameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="이름"
                        android:fontFamily="@font/font_content_regular"
                        android:inputType="text"
                        android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nicknameInputBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="16dp"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="@color/meta_grey05"
                    app:hintTextColor="@color/meta_grey03"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/nicknameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="닉네임"
                        android:fontFamily="@font/font_content_regular"
                        android:inputType="text"
                        android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailInputBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="16dp"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="@color/meta_grey05"
                    app:hintTextColor="@color/meta_grey03"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/emailInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="이메일"
                        android:fontFamily="@font/font_content_regular"
                        android:inputType="textEmailAddress"
                        android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phoneNumberInputBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="16dp"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="@color/meta_grey05"
                    app:hintTextColor="@color/meta_grey03"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/phoneNumberInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="전화번호"
                        android:fontFamily="@font/font_content_regular"
                        android:inputType="phone"
                        android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/heightInputBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="16dp"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="@color/meta_grey05"
                    app:hintTextColor="@color/meta_grey03"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/heightInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="키"
                        android:maxLength="6"
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/font_content_regular"
                        android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/weightInputBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="16dp"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="@color/meta_grey05"
                    app:hintTextColor="@color/meta_grey03"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/weightInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="몸무게"
                        android:maxLength="6"
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/font_content_regular"
                        android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/birthInputBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="16dp"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="@color/meta_grey05"
                    app:hintTextColor="@color/meta_grey03"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/birthInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="생년월일(8자리로 입력해주세요)"
                        android:fontFamily="@font/font_content_regular"
                        android:inputType="date"
                        android:maxLength="8"
                        android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <RadioGroup
                    android:id="@+id/genderRadio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                <RadioButton
                        android:id="@+id/male"
                        android:text="남"
                        android:textSize="14sp"
                        android:buttonTint="@color/meta_purple01"
                        android:fontFamily="@font/font_content_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <RadioButton
                        android:id="@+id/female"
                        android:text="여"
                        android:textSize="14sp"
                        android:buttonTint="@color/meta_purple01"
                        android:fontFamily="@font/font_content_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"/>
            </RadioGroup>

            <Button
                    android:id="@+id/registerBtn"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="38dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="24dp"
                    android:paddingBottom="10dp"
                    android:text="회원가입"
                    android:fontFamily="@font/font_content_bold"
                    android:textSize="14sp"
                    android:background="@drawable/btn_shadow"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>