<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".subscribe.SubTodayMealsLunch">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/subLunch_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:titleTextColor="@color/meta_grey01"
            app:titleTextAppearance="@style/TitleBarTextAppearance"
            android:background="@color/meta_white" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/subLunch_textView5"
            android:text="점심 Lunch"
            style="@style/SubTodayMealTitle"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.033" app:layout_constraintTop_toBottomOf="@+id/subLunch_toolbar"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="520dp"
            android:layout_height="800dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subLunch_textView5"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/subLunch_recyclerView"
            android:layout_marginStart="24dp" android:layout_marginEnd="24dp" android:layout_marginTop="20dp"
            app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>