<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragments.TalkFragment">



        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/snsFragmentRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="750dp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout8"
                    app:layout_constraintStart_toStartOf="parent"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout2" android:id="@+id/linearLayout8">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/nav_top"
                        android:layout_weight="1"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:weightSum="5"
                    android:background="@color/meta_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/linearLayout2">

                <ImageView
                        android:id="@+id/mealTap"
                        android:layout_weight="1"
                        android:src="@drawable/btn_nav_meal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/recipeTap"
                        android:layout_weight="1"
                        android:src="@drawable/btn_nav_recipe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/homeTap"
                        android:layout_weight="1"
                        android:src="@drawable/btn_nav_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/talkTap"
                        android:layout_weight="1"
                        android:src="@drawable/btn_nav_talk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/accountTap"
                        android:layout_weight="1"
                        android:src="@drawable/btn_nav_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="0sp"
                    android:scaleType="fitCenter"
                    android:backgroundTint="@color/meta_grey05"
                    app:srcCompat="@drawable/ic_add"
                    android:id="@+id/fragSnsInsertButton"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>