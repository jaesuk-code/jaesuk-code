<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragments.AccountFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <TextView
                android:id="@+id/myPageFrag_textView"
                android:text="마이페이지"
                android:textSize="20dp"
                android:fontFamily="@font/font_content_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="40dp"
                app:layout_constraintHorizontal_bias="0.01"
                android:layout_marginStart="24dp"/>

        <TextView
                android:id="@+id/myPageFrag_logoutBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="26dp"
                android:text="로그아웃"
                android:textSize="10sp"
                android:textColor="@color/meta_purple01"
                android:fontFamily="@font/font_content_regular"
                app:layout_constraintTop_toTopOf="@+id/myPageFrag_textView"
                app:layout_constraintBottom_toBottomOf="@+id/myPageFrag_textView"
                app:layout_constraintEnd_toEndOf="parent"/>

        <ScrollView
                android:id="@+id/myPageFrag_scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/myPageFrag_textView"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
                app:layout_constraintVertical_bias="0.0">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        tools:srcCompat="@tools:sample/avatars"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:id="@+id/accProfileImageView"
                        android:padding="12dp"
                        android:backgroundTint="@color/white"
                />
                <TextView
                        android:id="@+id/myPageFrag_textView17"
                        android:text="ID"
                        style="@style/MemberMypageTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/myPageFrag_idTxt"
                        android:text="회원의 ID값"
                        android:maxLength="12"
                        style="@style/MemberMypageEditText"
                        android:layout_width="match_parent"/>
                <TextView
                        android:id="@+id/myPageFrag_textView19"
                        android:text="닉네임"
                        style="@style/MemberMypageTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/myPageFrag_nicknameTxt"
                        android:text="회원의 Nickname"
                        style="@style/MemberMypageEditText"
                        android:layout_width="match_parent"/>
                <TextView
                        android:id="@+id/myPageFrag_textView22"
                        android:text="이름"
                        style="@style/MemberMypageTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/myPageFrag_nameTxt"
                        android:text="회원의 Name값"
                        android:maxLength="20"
                        style="@style/MemberMypageEditText"
                        android:layout_width="match_parent"/>
                <TextView
                        android:id="@+id/myPageFrag_textView24"
                        android:text="EMAIL"
                        style="@style/MemberMypageTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/myPageFrag_emailTxt"
                        android:text="회원의 EMAIL값"
                        style="@style/MemberMypageEditText"
                        android:layout_width="match_parent"/>
                <TextView
                        android:id="@+id/myPageFrag_textView26"
                        android:text="PHONE"
                        style="@style/MemberMypageTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/myPageFrag_phoneTxt"
                        android:text="회원의 PHONE값"
                        style="@style/MemberMypageEditText"
                        android:layout_width="match_parent"/>
                <TextView
                        android:id="@+id/myPageFrag_textView28"
                        android:text="키"
                        style="@style/MemberMypageTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/myPageFrag_heightTxt"
                        android:text="회원의 HEIGHT값"
                        style="@style/MemberMypageEditText"
                        android:layout_width="match_parent"/>
                <TextView
                        android:id="@+id/myPageFrag_textView30"
                        android:text="몸무게"
                        style="@style/MemberMypageTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/myPageFrag_weightTxt"
                        android:text="회원의 WEIGHT값"
                        style="@style/MemberMypageEditText"
                        android:layout_width="match_parent"/>
                <TextView
                        android:id="@+id/myPageFrag_textView10"
                        android:text="생년월일"
                        style="@style/MemberMypageTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/myPageFrag_birthTxt"
                        android:text="회원의 생년월일값"
                        style="@style/MemberMypageEditText"
                        android:layout_width="match_parent"/>
                <TextView
                        android:id="@+id/myPageFrag_textView32"
                        android:text="성별"
                        style="@style/MemberMypageTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/myPageFrag_genderTxt"
                        android:text="회원의 GENDER값"
                        style="@style/MemberMypageEditText"
                        android:layout_width="match_parent"/>
                <TextView
                        android:id="@+id/myPageFrag_textView34"
                        android:text="구독 여부"
                        style="@style/MemberMypageTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/myPageFrag_subTxt"
                        android:text="회원의 SUBSCRIBE값"
                        style="@style/MemberMypageEditText"
                        android:layout_width="match_parent"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="80dp"
                        android:orientation="horizontal">

                    <Button
                            android:id="@+id/myPageFrag_updateBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:paddingBottom="10dp"
                            android:text="회원정보 수정"
                            android:textSize="12sp"
                            android:background="@drawable/btn_shadow"
                            android:fontFamily="@font/font_content_bold"/>

                    <Button
                            android:id="@+id/myPageFrag_subInfoBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:paddingBottom="10dp"
                            android:background="@drawable/btn_shadow"
                            android:text="구독 정보"
                            android:textSize="12sp"
                            android:fontFamily="@font/font_content_bold" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
                android:id="@+id/linearLayout7">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/nav_top"
                    android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:weightSum="5"
                android:background="@color/meta_white"
                app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/linearLayout5">

            <ImageView
                    android:id="@+id/mealTap"
                    android:layout_weight="1"
                    android:src="@drawable/btn_nav_meal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/recipeTap"
                    android:layout_weight="1"
                    android:src="@drawable/btn_nav_recipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/homeTap"
                    android:layout_weight="1"
                    android:src="@drawable/btn_nav_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/talkTap"
                    android:layout_weight="1"
                    android:src="@drawable/btn_nav_talk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/accountTap"
                    android:layout_weight="1"
                    android:src="@drawable/btn_nav_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>