<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_margin="10dp">


    <ImageView
            android:id="@+id/subItem_imageView"
            android:scaleType="fitCenter"
            android:layout_width="550dp" android:layout_height="250dp"
            app:srcCompat="@drawable/metamom_combine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
    />
    <TextView
            android:id="@+id/subItem_kcalTxt"
            android:text="칼로리" android:gravity="center|right" android:textSize="20dp"
            android:fontFamily="@font/font_content_regular"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/subItem_foodNameTxt"
            app:layout_constraintStart_toEndOf="@+id/subItem_amountTxt" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.609"/>
    <TextView
            android:id="@+id/subItem_foodNameTxt"
            android:text="음식이름" android:gravity="center_vertical" android:textSize="20dp"
            android:fontFamily="@font/font_content_regular"
            android:layout_width="500dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/subItem_imageView"
            android:layout_marginTop="35dp" app:layout_constraintHorizontal_bias="0.533"/>
    <TextView
            android:id="@+id/subItem_amountTxt"
            android:text="양 g" android:gravity="center|right" android:textSize="20dp"
            android:fontFamily="@font/font_content_regular"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subItem_foodNameTxt" app:layout_constraintHorizontal_bias="0.381"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.609"/>
</androidx.constraintlayout.widget.ConstraintLayout>