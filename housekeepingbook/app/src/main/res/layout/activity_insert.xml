<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InsertActivity">

    <TextView
            android:id="@+id/textView2"
            android:text="추가"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width="209dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.051"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="375dp"
            android:layout_height="69dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
        <RadioButton
                android:id="@+id/incomeBtn"
                android:text="수입"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                />
        <RadioButton
                android:id="@+id/expenseBtn"
                android:text="지출"
                android:layout_marginStart="80dp"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
        />
    </RadioGroup>

    <TextView
            android:id="@+id/usageTxt"
            android:text="사용내역"
            android:textSize="25dp"
            android:layout_width="115dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" android:layout_marginTop="24dp"/>
    <EditText
            android:id="@+id/insertUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="사용내역을 작성하세요."
            android:ems="10"
            app:layout_constraintTop_toBottomOf="@+id/usageTxt"
            android:layout_marginTop="15dp" app:layout_constraintStart_toStartOf="@+id/usageTxt"/>

    <TextView
            android:id="@+id/dateTxt"
            android:text="날짜"
            android:textSize="25dp"
            android:layout_width="115dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/insertUsage"
            app:layout_constraintStart_toStartOf="@+id/insertUsage" android:layout_marginTop="28dp"/>
    <DatePicker
            android:id="@+id/insertCalendar"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            app:layout_constraintTop_toBottomOf="@+id/dateTxt"
            android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="@+id/dateTxt"/>

    <TextView
            android:id="@+id/priceTxt"
            android:text="금액"
            android:textSize="25dp"
            android:layout_width="115dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toEndOf="@+id/usageTxt"
            android:layout_marginStart="156dp" app:layout_constraintTop_toTopOf="@+id/usageTxt"/>
    <EditText
            android:id="@+id/insertPrice"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:hint="사용하신 금액을 작성하세요."
            android:ems="10"
            app:layout_constraintStart_toStartOf="@+id/priceTxt"
            app:layout_constraintTop_toBottomOf="@+id/priceTxt"
            android:layout_marginTop="15dp"/>


    <TextView
            android:id="@+id/memoTxt"
            android:text="메모"
            android:textSize="25dp"
            android:layout_width="115dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/insertCalendar"
            app:layout_constraintStart_toStartOf="@+id/insertCalendar" android:layout_marginTop="32dp"/>
    <EditText
            android:layout_width="436dp"
            android:layout_height="100dp"
            android:inputType="textPersonName"
            android:hint="입력하실 내용을 작성하세요."
            android:ems="10"
            android:id="@+id/insertMemo"
            app:layout_constraintTop_toBottomOf="@+id/memoTxt"
            app:layout_constraintStart_toStartOf="@+id/memoTxt"
            android:layout_marginTop="15dp"/>

    <Button
            android:id="@+id/insertBtn2"
            android:text="추가"
            android:layout_width="120dp"
            android:layout_height="65dp"
            app:layout_constraintTop_toBottomOf="@+id/insertMemo"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.356"/>
    <Button
            android:id="@+id/menuBtn"
            android:text="메뉴"
            android:layout_width="120dp"
            android:layout_height="65dp"
            app:layout_constraintStart_toEndOf="@+id/insertBtn2"
            android:layout_marginStart="28dp"
            app:layout_constraintTop_toTopOf="@+id/insertBtn2"/>


</androidx.constraintlayout.widget.ConstraintLayout>