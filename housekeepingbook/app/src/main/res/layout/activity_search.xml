<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchActivity">


    <DatePicker
            android:id="@+id/searchCalendar"
            android:layout_width="269dp"
            android:layout_height="361dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.501"/>
    <TextView
            android:id="@+id/textView7"
            android:text="검색"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width="209dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.031"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.501"/>

    <Button
            android:id="@+id/resultBtn"
            android:text="결과"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/searchCalendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchList"
            android:layout_width="278dp"
            android:layout_height="198dp"
            app:layout_constraintTop_toBottomOf="@+id/resultBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:id="@+id/menuBtn2"
            android:text="메뉴"
            android:layout_width="120dp"
            android:layout_height="65dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchList"
            android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>